<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:id="@+id/categoryAppointment">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"
            android:orientation="horizontal"
            android:padding="16dp" >
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_column="0"-->
                <!--android:layout_row="0"-->
                <!--android:text="@string/label_appointment_date"-->
                <!--android:textSize="10sp"-->
                <!--android:layout_gravity="fill"-->
                <!--android:layout_columnWeight="1" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:id="@+id/appointment_date"
                android:textSize="10sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/label_patient_name"
                android:textSize="15sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_patient"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="15sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="@string/label_doctor_name"
                android:textSize="15sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_doctor"
                android:textSize="15sp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="@string/label_appointment_status"
                android:textSize="13sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_status"
                android:textSize="13sp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/bAcceptAppointment"
                android:layout_rowSpan="4"
                android:layout_column="2"
                android:layout_row="0"
                grid:layout_columnWeight="1"
                android:textSize="25sp"
                android:text="@string/fa_icon_check"
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical" />

            <TextView
                android:id="@+id/bRejectAppointment"
                android:layout_rowSpan="4"
                android:layout_column="3"
                android:layout_row="0"
                grid:layout_columnWeight="1"
                android:textSize="25sp"
                android:text="@string/fa_icon_close"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical" />

        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>