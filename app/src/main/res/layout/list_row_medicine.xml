<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:id="@+id/categoryMedicine">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:id="@+id/medicine_name"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medicine_type"
                android:textSize="15sp"
                android:layout_below="@+id/medicine_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medicine_stock"

                android:textSize="15sp"
                android:text="100 Bottle"
                android:layout_below="@+id/medicine_type"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medicine_price"
                android:textSize="15sp"
                android:text="Rp 100 /Bottle"
                android:layout_alignBaseline="@+id/medicine_stock"
                android:layout_alignBottom="@+id/medicine_stock"
                android:layout_toStartOf="@+id/bDeleteMedicine" />

            <ImageView android:id="@+id/bDeleteMedicine"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                app:srcCompat="@android:drawable/ic_delete"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp" />
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unit_medicine_1"
                android:textSize="15sp"
                android:text="/Bottle"
                android:layout_alignBaseline="@+id/medicine_stock"
                android:layout_alignBottom="@+id/medicine_stock"
                android:layout_toEndOf="@+id/medicine_stock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unit_medicine_2"
                android:textSize="15sp"
                android:text="Bottle"
                android:layout_alignBaseline="@+id/medicine_price"
                android:layout_alignBottom="@+id/medicine_price"
                android:layout_alignEnd="@+id/bDeleteMedicine" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>