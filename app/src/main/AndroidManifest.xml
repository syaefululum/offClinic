<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.posmedicine">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".MyApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="offclinic_db" />
        <meta-data android:name="VERSION" android:value="5" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.posmedicine.models" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateUnitActivity" />
        <!-- <activity android:name=".EditUnitActivity" /> -->
        <activity
            android:name=".MedicineActivity"
            android:label="@string/title_activity_medicine"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UnitActivity"
            android:label="@string/title_activity_unit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppointmentActivity"
            android:label="@string/title_activity_appointment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AppointmentDetailActivity" />
        <activity android:name=".CreateMedicineActivity" />
        <activity android:name=".EditMedicineActivity" />
        <activity android:name=".EditUnitActivity" />
        <activity android:name=".PharmacyChasierActivity" />
        <activity android:name=".CashierTransactionActivity" />
        <activity android:name=".CashierTransactionDetailActivity" />
        <activity android:name=".CreateAppointmentActivity"></activity>
    </application>

</manifest>